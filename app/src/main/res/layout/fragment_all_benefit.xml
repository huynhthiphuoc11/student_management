<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_home_main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#ECECEC"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">









            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="7dp">

                            <ImageView
                                android:id="@+id/imgxinnghi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#EFEFEF"
                                android:scaleType="centerCrop"

                                android:src="@drawable/editfile46" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvxinnghi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xin nghỉ" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="7dp">

                            <ImageView
                                android:id="@+id/diemdanh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#C9D0F8"
                                android:scaleType="centerCrop"

                                android:src="@drawable/diemdanh48" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvxdiemdanh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điểm danh" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="7dp"

                            >

                            <ImageView
                                android:id="@+id/lichhoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#C1DFF8"
                                android:scaleType="centerCrop"

                                android:src="@drawable/calendar46" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvtkb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lịch học" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="7dp"

                            >

                            <ImageView
                                android:id="@+id/tvphonelist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#FDF9D8"
                                android:scaleType="centerCrop"

                                android:src="@drawable/danhba46" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvdanhba"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Danh bạ" />
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                app:cardCornerRadius="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="7dp">

                            <ImageView
                                android:id="@+id/imgtintuc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#F8F4D3"
                                android:scaleType="centerCrop"

                                android:src="@drawable/tintuc48" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvtintuc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tin tức" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"

                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="7dp">

                            <ImageView
                                android:id="@+id/tintuctuyensinh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#DDF6C0"
                                android:scaleType="centerCrop"

                                android:src="@drawable/infor48" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvtintuctuyensinh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tuyển sinh" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:orientation="vertical"

                        >


                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>