<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ECECEC"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <!-- Bạn có thể thêm các view khác vào container này -->
        <LinearLayout
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Tìm kiếm..."
                android:background="@drawable/right_coners"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1" />

        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notifi"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="330dp"
            tools:src="@drawable/bell" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avt"
            android:layout_width="78dp"
            android:layout_height="59dp"
            android:layout_marginTop="40dp"
            tools:src="@drawable/girl" />



        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:paddingLeft="80dp"
            android:layout_marginTop="45dp"
            android:textSize="18dp"
            android:text="Huỳnh Thị Phước" />
        <TextView
            android:id="@+id/tvclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="80dp"
            android:layout_marginTop="65dp"
            android:text="lớp 7C" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/center_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="220dp"
        android:background="#F8E8EE"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="40dp"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/speaker" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/briefcase" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/phonebook" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/attendance" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>


    <FrameLayout
    android:id="@+id/centercenter_container"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_marginTop="340dp"
    android:background="#F8E8EE"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tvedu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Edu-Link gợi ý" />

    <TextView
        android:id="@+id/tvall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:paddingLeft="320dp"
        android:textColor="#F44336"
        android:text="Tất cả" />
</FrameLayout>

    <FrameLayout
        android:id="@+id/centerct_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="360dp"
        android:background="#F8E8EE"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="40dp"

                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/speaker" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/briefcase" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/phonebook" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/attendance" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/centerend_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="490dp"
        android:background="#F8E8EE"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Hướng dẫn sử dụng" />

    </FrameLayout>
    <FrameLayout
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="520dp"
        android:background="#F8E8EE"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Ô vuông ở góc trên bên trái -->
            <FrameLayout
                android:id="@+id/top_left"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@color/white">


                <!-- Icon -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/huongdan" />

                <!-- TextView dưới icon -->

            </FrameLayout>

            <!-- Ô vuông ở góc trên bên phải -->
            <FrameLayout
                android:id="@+id/top_right"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="#FFC107">

                <!-- Icon -->

                <!-- TextView dưới icon -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/computerr" />



            </FrameLayout>
        </LinearLayout>

    </FrameLayout>
    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corners"
        app:itemIconTint="@color/icons_color"
        app:itemRippleColor="#F44336"
        app:menu="@menu/navigation_items">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>