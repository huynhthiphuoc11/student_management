<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ECECEC"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/anhnen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/anhnen1" />

        <ImageView
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bottom" />




    <!-- Bạn có thể thêm các view khác vào container này -->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/right_coners"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/right_coners"
                android:hint="  Tìm kiếm..."
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notifi"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="40dp"
            tools:src="@drawable/bell" />

        <androidx.cardview.widget.CardView
            android:id="@+id/avt"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="40dp"
             android:background="@android:color/transparent"
             >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/girl"
                android:color="@android:color/transparent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:paddingLeft="80dp"
            android:text="Huỳnh Thị Phước"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="65dp"
            android:paddingLeft="80dp"
            android:text="lớp 7C" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/center_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="220dp"
        android:background="#F3F1F2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#F8EAD5"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/thongbao" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:text="Bản tin" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#D3E9FB"
                    >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/bao" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:text="Báo bài" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#DFF4E0"
                    >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/danhba" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:text="Danh bạ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#DCFBF8"
                    >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/diemdanh" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:text="Điểm danh" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


    <FrameLayout
    android:id="@+id/centercenter_container"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginTop="340dp"
    android:background="#F3F1F2"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/tvedu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Edu-Link gợi ý" />

    <TextView
        android:id="@+id/tvall"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="16dp"
        android:paddingLeft="320dp"
        android:textColor="#F44336"
        android:text="Tất cả" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="2"

            android:layout_marginLeft="180dp"
            android:background="@drawable/arrow" />
</FrameLayout>

    <FrameLayout
        android:id="@+id/centerct_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="365dp"
        android:background="#F3F1F2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="120dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#DFF4E0"
                    >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/tinnhan" />
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:text="Tin nhắn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#FBE2E0"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/notebook" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="5dp"
                    android:text="Xin Nghỉ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="120dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#D3E9FB"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/bao" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:text="Báo bài" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#DCFBF8"
                    >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:src="@drawable/diemdanh" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:text="Điểm danh" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/centerend_container"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="485dp"
        android:background="#F3F1F2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvhd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Hướng dẫn sử dụng" />

    </FrameLayout>
    <FrameLayout
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="515dp"
        android:background="#F3F1F2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Ô vuông ở góc trên bên trái -->
            <FrameLayout
                android:id="@+id/top_left"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@color/white">


                <!-- Icon -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:src="@drawable/huongdan" />

                <!-- TextView dưới icon -->

            </FrameLayout>

            <!-- Ô vuông ở góc trên bên phải -->
            <FrameLayout
                android:id="@+id/top_right"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="#FFC107">

                <!-- Icon -->

                <!-- TextView dưới icon -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:src="@drawable/computerr" />



            </FrameLayout>
        </LinearLayout>

    </FrameLayout>

